<WindowManager>
    MainWindow:
    FirsWindow:
<MainWindow>
    name: "Main"
    GridLayout:
        cols: 1
        size: root.width, root.height
        padding: 10
        background_color: 0.058, 0.082, 0.27

        Label:
            text: "Guess Star Wars Character"
            font_size: 56

        Button:
            text: "Play"
            on_release: app.root.current = "Play"
            background_color: 0.058, 0.082, 0.27
            font_size: 42
<FirsWindow>
    name: "Play"
    secret_word: secret_word
    guess: guess
    results: results
    GridLayout:
        cols: 1
        size: root.width, root.height
        padding: 10
        background_color: 0.058, 0.082, 0.27
        Label:
            id: results
            font_size: 26

        Label:
            id: secret_word
            font_size: 56
            text: "Star Wars Character"
        GridLayout:
            cols: 2

            TextInput:
                id: guess
                multiline: False
                font_size: 56


            Button:
                text: "Check it"
                on_press: root.qbtn()
                background_color: 0.058, 0.082, 0.27
                margin: 25
        Button:
            text: "Reset"
            on_release: app.root.current = "Main"
            background_color: 0.058, 0.082, 0.27



